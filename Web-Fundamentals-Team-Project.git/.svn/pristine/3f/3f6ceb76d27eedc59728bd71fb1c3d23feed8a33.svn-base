html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, i, center, dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, audio, canvas, details, figcaption,
figure, footer, header, mark, menu, meter, nav,
output, progress, section, summary, time, video {
    margin: 0;
    padding: 0;
    border: 0;
    outline: 0;
    font-size: 100%;
    background: transparent;
}
@font-face {
    font-family: Deco;
    src: url(Fonts/A770-Deco-Italic.ttf);
}

@font-face {
    font-family: Ubuntu;
    src: url("Fonts/Ubuntu-M.ttf");
}

article, aside, dialog, figure, footer, header, nav, section, blockquote {
    display: block;
}

body {
    /*font-family: tahoma, verdana, arial, sans-serif;*/
    font-family: Ubuntu, sans-serif;
    font-size: 14px;
    background: url("Images/Backgrounds/circuitboard1.png");
    background-attachment: fixed;
}
#wrapper {
    max-width: 900px;
    width: 95%;
    margin: 0 auto;
}

/***********************HEADER*********************************/

#headerContainer {
    background: rgba(0, 0, 0, 0.3);
    border-left: 3px solid white;
    border-right: 3px solid white;
    border-top: 3px solid white;
    border-radius: 5px 5px 0 0;
    padding-bottom: 1px;
}

    #header {
        width: 100%;
        box-sizing: border-box;
        border-bottom: 1px solid white;
        padding: 10px 0px 10px 0px;
        color: white;
        font-size: 4em;
        font-family: Deco;
        text-align: center;
        overflow: hidden;
    }

        #header > a  {
            text-decoration: none;
            color: white;
        }
/*************************HEADER MENU*******************************/
#headerMenu {
    overflow: hidden;
    background-color: transparent;
    display: block;
    border-bottom: 1px solid white;
    text-align: center;
}

    #headerMenu > ul {
        /*overflow: hidden;*/
        /*max-width: 460px;*/
        /*width: 100%;*/
        display: inline-block;
        margin: 5px auto 5px;
    }

        #headerMenu > ul > li {
            box-sizing: border-box;
            list-style: none;
            display: inline-block;
            /*float: left;*/
            /*display: inline-flex;*/
            /*flex-wrap: wrap;*/
            padding:5px 15px 5px 15px;
            background: transparent;
            /*border-radius: 0px 0px 10px 0px;*/
            margin: 0 auto;
            border: 1px solid transparent;
        }

        #headerMenu > ul > li a {
            color: white;
            font-size: 1em;
            text-transform: uppercase;
            text-decoration: none;
        }


        #headerMenu > ul > li:hover {
            /*background-color: white;*/
            /*border-right: 1px solid #516A98;*/
            /*border-bottom: 1px solid #516A98;*/
            color: black;
            cursor: pointer;
            transition: all .5s ease;
            /*text-decoration: underline;*/
            border: 1px solid white;
        }

/**************************MAIN******************************/


#mainWrapper {
    background-color: white;
}

    #mainContainer {
        max-width:820px;
        width: 100%;
        margin: 0px auto 0px auto;
        overflow: hidden;
        padding: 19px 0px 0px 0px;
    }

/****************************LEFT SIDE****************************/

        #leftSideContainer {
            float: left;
            overflow: hidden;
            max-width: 580px;
            width: 100%;
            margin: 0px 40px 15px 0px;
        }

            .sectionMain {
                float: left;
                margin: 0px 0px 15px 0px;
                padding: 12px 19px 12px 19px;
                border: 1px solid #DBDBDB;
                border-radius: 10px;
            }

                .sectionMain article > h1 {
                    margin: 5px 0px 17px 0px;
                    color: #516A98;
                    text-transform: uppercase;
                    font-size: 2em;
                    text-align: center;
                }

                #presentation article h2 {
                    margin: 5px 0px 17px 0px;
                    color: #516A98;
                    font-size: 1.5em;
                    text-align: center;
                }

                #presentation .presentationImages {
                    max-width: 580px;
                    width: 100%;
                    margin-bottom: 10px;
                }



/************************RIGHT SIDE********************************/

    #rightSideContainer {
        /*float: left;*/
        overflow: hidden;
        width: 200px;
        margin: 0 auto 15px;
        /*clear: both;*/
    }

    #geekButtonSection {
        float: left;
        box-sizing: border-box;
        width: 100%;
        margin: 0px 0px 15px 0px;
        padding: 12px 19px 12px 19px;
        border: 1px solid #DBDBDB;
        border-radius: 10px;
        background-color: #EEEEEE;
    }

        #geekButtonSection > h1 {
            margin: 5px 0px 17px 0px;
            color: #516A98;
            text-transform: uppercase;
            font-size: 24px;
        }

        #geekButtonSection > ul > li {
            list-style: none;
        }

        #geekButtonSection > a {
            color: #516A98;
        }

        #geekButton {
            display: inline-block;
            width: 100%;
            height: 70px;
            background: linear-gradient(#880b0d, red);
            font-family: Deco;
            color: white !important;
            font-size: 1.9em;
            border-radius: 10px;
            margin: 10px 0px 0px 0px;
            box-sizing: border-box;
            text-decoration: none;
            border: 2px solid white;
            line-height: 2.4em;
            text-align: center;
        }


        #geekButton:hover {
            outline: none;
            border: none;

        }

        #geekButton:active {
            outline: none;
            border: none;
        }





/************************FOOTER********************************/



#footerWrapper {
    height: 100px;
    background: rgba(0, 0, 0, 0.3);
    box-sizing: border-box;
    border-left: 3px solid white;
    border-right: 3px solid white;
    padding-top: 1px;
    clear: both;
}

#footerContainer {
    height: 100%;
    border-top: 1px solid #ffffff;
    width: 100%;
    overflow: hidden;
}

#footerContent {
    font-size: 1em;
    color: #ffffff;
}

